<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_size_5"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/btn_Check"
        android:layout_width="@dimen/common_size_90"
        android:layout_height="@dimen/common_size_30"
        android:layout_marginLeft="@dimen/common_size_5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/common_size_9"
        app:cardElevation="@dimen/common_size_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleX="1.1"
            android:text="Check"
            android:textSize="@dimen/common_text_size_18" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/btn_Reset"
        android:layout_width="@dimen/common_size_90"
        android:layout_height="@dimen/common_size_30"
        android:layout_marginLeft="@dimen/common_size_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/common_size_9"
        app:cardElevation="@dimen/common_size_1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:scaleX="1.1"
            android:text="Reset"
            android:textSize="@dimen/common_text_size_18" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_score"

            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_size_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/common_size_15"
            android:gravity="center"
            android:scaleX="1.1"
            android:text="0/5"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size_18" />
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/background_tips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_tips"
    android:orientation="vertical"
    android:paddingBottom="@dimen/common_size_80"
    android:paddingLeft="@dimen/common_size_23"
    android:paddingRight="@dimen/common_size_23"
    android:paddingTop="@dimen/common_size_60"
    android:visibility="gone">

    <android.support.v7.widget.CardView
        android:id="@+id/tips_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/common_size_15"
        app:cardElevation="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarSize="@dimen/common_size_3"
            android:scrollbarThumbVertical="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/common_size_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_text"
                    android:weightSum="100">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/common_size_2"
                        android:layout_marginLeft="@dimen/common_size_2"
                        android:layout_marginRight="@dimen/common_size_1"
                        android:layout_marginTop="@dimen/common_size_2"
                        android:layout_weight="18"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_23"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="Level"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/level"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_60"
                            android:layout_marginTop="@dimen/common_size_2"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="easy"
                            android:textIsSelectable="true"

                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/common_size_2"
                        android:layout_marginLeft="@dimen/common_size_1"
                        android:layout_marginRight="@dimen/common_size_1"
                        android:layout_marginTop="@dimen/common_size_2"
                        android:layout_weight="31"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_23"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="Topic"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/topic"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_60"
                            android:layout_marginTop="@dimen/common_size_2"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="business commuications"

                            android:textIsSelectable="true"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/common_size_2"
                        android:layout_marginLeft="@dimen/common_size_1"
                        android:layout_marginRight="@dimen/common_size_1"
                        android:layout_marginTop="@dimen/common_size_2"
                        android:layout_weight="31"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_23"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="Type"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_60"
                            android:layout_marginTop="@dimen/common_size_2"
                            android:background="@color/white"
                            android:gravity="center"

                            android:text="telephone conversation"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/common_size_2"
                        android:layout_marginLeft="@dimen/common_size_1"
                        android:layout_marginRight="@dimen/common_size_2"
                        android:layout_marginTop="@dimen/common_size_2"
                        android:layout_weight="20"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_23"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="Speakers"
                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/speaker"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/common_size_60"
                            android:layout_marginTop="@dimen/common_size_2"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="man-woman"
                            android:textIsSelectable="true"

                            android:textSize="@dimen/common_text_size_10"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/common_size_150"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/common_size_10"
                    android:scaleType="fitStart" />


                <RelativeLayout
                    android:id="@+id/tips_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/common_size_10"
                        android:scrollbars="none"
                        android:text="HELPFUL TIP:"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/common_text_size_16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/common_size_10"
                        android:layout_marginTop="@dimen/common_size_10"
                        android:scrollbarSize="@dimen/common_size_2"
                        android:scrollbars="none"
                        android:text="                           Describe a normal school day in the life of a student in yourcountry including hours, class subjects, meals, rules, dress, andextra-curricular activities. What options are there in your countryto take online classes through distance learning, even forchildren?"
                        android:textColor="@color/primary_text"
                        android:textIsSelectable="true"
                        android:textSize="@dimen/common_text_size_16" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
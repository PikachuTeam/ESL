<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_90"
    android:layout_marginBottom="@dimen/common_size_5"
    android:layout_marginLeft="@dimen/common_size_10"
    android:layout_marginRight="@dimen/common_size_10"
    android:layout_marginTop="@dimen/common_size_5"
    android:elevation="@dimen/common_size_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_size_2"
        android:weightSum="100">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_size_7"
                android:layout_marginTop="@dimen/common_size_3"
                android:maxLines="2"
                android:text="A Day School"
                android:textSize="@dimen/common_text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_30"
                android:layout_alignParentBottom="true"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/common_size_20"
                        android:layout_height="@dimen/common_size_20"
                        android:src="@drawable/play_circle_outline" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="23"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05:34"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/common_text_size_18" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="@dimen/common_size_20"
                        android:layout_height="@dimen/common_size_20"
                        android:src="@drawable/dot" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3/5"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/common_text_size_18" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
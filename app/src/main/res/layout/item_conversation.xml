<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_90"
    android:layout_marginBottom="@dimen/common_size_5"
    android:layout_marginLeft="@dimen/common_size_10"
    android:layout_marginRight="@dimen/common_size_10"
    android:layout_marginTop="@dimen/common_size_5"
    android:elevation="@dimen/common_size_2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/common_size_2"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/id_iv_pro"
                android:layout_width="@dimen/common_size_50"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/pro" />

            <RelativeLayout
                android:id="@+id/item_favorite"
                android:layout_width="@dimen/common_size_22"
                android:layout_height="@dimen/common_size_22"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:gravity="center">

                <ImageView
                    android:padding="@dimen/common_size_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dot_white" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/star_circle" />
            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:id="@+id/id_iv_downloaded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/common_size_1"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_size_5"
                    android:layout_marginRight="@dimen/common_size_5"
                    android:text="@string/downloaded"
                    android:textColor="@color/white"
                    android:textSize="@dimen/common_text_size_11"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_size_7"
                android:layout_marginTop="@dimen/common_size_3"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="2"
                android:scrollHorizontally="true"
                android:text="A Day School"
                android:textSize="@dimen/common_text_size_18" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_size_30"
                android:layout_alignParentBottom="true"
                android:weightSum="100">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/common_size_20"
                        android:layout_height="@dimen/common_size_20"
                        android:src="@drawable/play_circle_outline" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="36"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_length"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/common_size_10"
                        android:maxLines="1"
                        android:text="05:34"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/common_text_size_18" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="center">


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_status"
                        android:layout_width="@dimen/common_size_20"
                        android:layout_height="@dimen/common_size_20"
                        android:src="@drawable/dot" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="22"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="3/5"
                        android:textColor="@color/secondaryTextColor"
                        android:textSize="@dimen/common_text_size_18" />

                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>